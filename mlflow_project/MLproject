name: Forecast

conda_env: conda.yaml

entry_points:
  # train MLflow model
  train:
    parameters:
      data: {type: string, default: ""}
      run_id: {type: string, default: ""}
    command: "python train.py {data} {run_id}"

  # Forecast on all timeseries.
  forecast:
    parameters:
      data_path: {type: string, default: ""}
      experiment_name: {type: string, default: ""}
    command: "python forecast.py  {data_path} {experiment_name}"

  main:
    parameters:
      data_path: {type: string, default: ""}
      experiment_name: {type: string, default: ""}
    command: "python forecast.py {data_path} {experiment_name}"
